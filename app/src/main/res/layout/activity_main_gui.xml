<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dakinc.hitormiss.MainGUI">

    <TextView
        android:text="You have been dealt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PlayerText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_vertical_margin"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="15dp"
        android:layout_below="@+id/PlayerText"
        android:layout_alignParentStart="true"
        android:id="@+id/PlayerCards" />

    <TextView
        android:text="The dealer has:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayerCards"
        android:layout_alignParentStart="true"
        android:id="@+id/DealerText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_vertical_margin"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:textSize="15dp"
        android:layout_below="@+id/DealerText"
        android:layout_alignParentStart="true"
        android:id="@+id/DealerCards" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/DealerCards"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/details"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageButton" />


</RelativeLayout>
